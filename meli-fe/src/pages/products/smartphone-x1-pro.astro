            }

            .product-info {
                padding: 0 32px 32px;
            }

            .product-condition {
                font-size: 14px;
                color: #666;
                margin-bottom: 8px;
            }

            .product-title {
                font-size: 24px;
                font-weight: 600;
                margin-bottom: 16px;
                line-height: 1.3;
            }

            .product-rating {
                display: flex;
                align-items: center;
                gap: 8px;
                margin-bottom: 24px;
                font-size: 14px;
            }

            .stars {
